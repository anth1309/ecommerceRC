{% extends 'base.html.twig' %}


{% block title %}Acceuil
{% endblock %}

{% block body %}


	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1 class="text-warning">bonjour</h1>
				<p>Bienvenu sur RcCham le site dédié à notre passion commune</p>
			</div>
			{% for category in categories %}
				{% if category.parent %}
					<div class="col-3">
						<div class="card h-100">
							<div class="card-body">
								<h3 class="card-title">{{ category.name }}</h3>
								<a href=" {{ path ('categories_list', {slug: category.slug} ) }} " class="bg-ema-lightgrey">Voir les produits</a>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<div class=" col-12">
					{{ category.name }}</h2>
			</div>
		{% endif %}
	{% endfor %}

	<div class="col-12"></div>


</section></main>{% endblock %}
